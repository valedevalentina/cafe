generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Venta {
  id      Int      @id @default(autoincrement())
  nombre  String  
  cafes   Cafe[]
  mesa    Int
  createdAt DateTime @default(now())
}

model Cafe {
  id      Int     @id @default(autoincrement())
  cafe    String
  precio  Int
  ventaId Int 
  venta Venta @relation(fields: [ventaId], references: [id], onDelete: Cascade)
}